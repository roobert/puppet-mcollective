main_collective                 = mcollective
collectives                     = mcollective
libdir                          = /opt/puppetlabs/mcollective/plugins
libdir                          = /usr/share/mcollective/plugins
libdir                          = /usr/libexec/mcollective
logger_type                     = console
loglevel                        = warn
securityprovider                = psk
plugin.psk                      = unset
connection_timeout              = 3
connector                       = rabbitmq
plugin.rabbitmq.vhost           = /mcollective
plugin.rabbitmq.pool.size       = 1
plugin.rabbitmq.pool.1.host     = <%= @host %>
plugin.rabbitmq.pool.1.port     = <%= @port %>
plugin.rabbitmq.pool.1.user     = <%= @username %>
plugin.rabbitmq.pool.1.password = <%= @password %>
plugin.rabbitmq.pool.1.ssl      = true
plugin.rabbitmq.pool.1.ssl.ca   = /etc/puppetlabs/puppet/ssl/certs/ca.pem
plugin.rabbitmq.pool.1.ssl.cert = /etc/puppetlabs/puppet/ssl/certs/<%= @fqdn %>.pem
plugin.rabbitmq.pool.1.ssl.key  = /etc/puppetlabs/puppet/ssl/private_keys/<%= @fqdn %>.pem
